{
  "repository": {
    "type": "git",
    "url": "https://github.com/rdok/aws-sam-ts-graphql"
  },
  "name": "aws-sam-ts-graphql",
  "version": "1.0.0",
  "description": " Apollo GraphQL Server template with AWS SAM, TypeScript & Lambda. Boilerplate with GitHub CI/CD actions, best security practises such as least privileges IAM policies, automated dependency updates and much more. ",
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "tsc && cp package* dist/",
    "dev": "nodemon --config dev/nodemon.json dev/server.ts",
    "lint": "eslint ./ --max-warnings 0",
    "lint:fix": "eslint ./ --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "jest --verbose",
    "test:watch": "jest --watch --verbose"
  },
  "author": "Rizart Dokollari",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.9.1",
    "apollo-server": "^3.6.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "jest-mock-extended": "^2.0.4",
    "jest-ts-auto-mock": "^2.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-auto-mock": "^3.5.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "apollo-datasource-rest": "^3.5.0",
    "apollo-server-lambda": "^3.6.1",
    "graphql": "^16.2.0"
  },
  "engines": {
    "node": "14"
  }
}
